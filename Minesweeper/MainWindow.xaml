<Window x:Name="mainWindow" x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper" Height="884" Width="800" ResizeMode="CanMinimize">
    <Grid x:Name="gridContainer">
        <Menu x:Name="menuBar" Height="24" VerticalAlignment="Top"/>
        <Canvas x:Name="canvas" Margin="0,24,0,20" Cursor="Cross" Focusable="True" Initialized="canvas_Initialized" MouseMove="canvas_MouseMove" MouseDown="canvas_MouseDown" Background="Gray"/>
        <StatusBar x:Name="status" VerticalAlignment="Bottom" Height="20">
            <Label x:Name="coordinatesLabel" Content="(X:0 Y:0) " FontSize="14" Focusable="True" Background="{x:Null}" Foreground="Black" FontFamily="Arial" Padding="5,0,5,0" Height="20" MouseEnter="coordinatesLabel_MouseEnter"/>
        </StatusBar>
    </Grid>
</Window>
