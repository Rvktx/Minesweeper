<Window x:Name="mainWindow" x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper" Height="864" Width="800" ResizeMode="CanMinimize">
    <Grid x:Name="gridContainer">
        <Menu x:Name="menuBar" Height="24" VerticalAlignment="Top">
            <Label x:Name="settingsButton" Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0,0,0,0" MouseDown="settingsButton_MouseDown" Height="24" Width="50" FontSize="14"/>
        </Menu>
        <Canvas x:Name="canvas" Margin="0,24,0,0" Cursor="Cross" Focusable="True" Initialized="canvas_Initialized" MouseDown="canvas_MouseDown" Background="Gray"/>
    </Grid>
</Window>
