<Window x:Class="Minesweeper.GameFinishedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="GameFinishedWindow" Height="175" Width="270" ResizeMode="NoResize" Topmost="True">
    <Canvas x:Name="container">
        <TextBlock x:Name="msg" Text="You lost XDD" Height="30" FontSize="24" Margin="0,0,0,0" TextAlignment="Center" Width="250" Canvas.Left="0" Canvas.Top="25"/>
        <Button x:Name="exitButton" Content="Exit" Width="80" Height="30" Margin="0,0,0,0" Canvas.Left="30" Canvas.Top="90" Click="exitButton_Click"/>
        <Button x:Name="retryButton" Content="Retry" Width="80" Height="30" Margin="0,0,0,0" Canvas.Left="140" Canvas.Top="90" Click="retryButton_Click"/>
    </Canvas>
</Window>
